% Suppress some of the fields in a reference
\AtEveryBibitem{
  \clearfield{archivePrefix}
  \clearfield{arxivId}
  \clearfield{pmid}
  \clearfield{eprint}
  \ifentrytype{book}{\clearfield{doi}}{}
}

